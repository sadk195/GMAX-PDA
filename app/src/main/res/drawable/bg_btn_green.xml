<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"
          >
        <shape> <!--모양-->
            <corners
                android:radius = "14dp"
                />

            <gradient
                android:angle = "45"
                android:centerX = "35%"
                android:centerColor = "#00CF00"
                android:startColor = "#00CF00"
                android:endColor = "#00CF00"
                android:type = "linear"
                />

            <padding
                android:left = "0dp"
                android:top = "0dp"
                android:right = "0dp"
                android:bottom = "0dp"
                />

            <size
                android:width = "270dp"
                android:height = "60dp"
                />
            <stroke
                android:width = "3dp"
                android:color = "#878787"
                />
        </shape>
    </item>
</selector>