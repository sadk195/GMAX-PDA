<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"
          >
        <shape> <!--모양-->
            <solid android:color="#ffffff"><!--모양-->

            </solid>
            <corners android:radius="10dp"><!--코너 라운드처리-->

            </corners>
            <stroke android:width="2dp"

                android:color="#d9ddde">  <!--테두리 설정-->


            </stroke>
            <padding
                android:left="10dp" />

        </shape>
    </item>

    <item android:state_enabled="false"
        >
        <shape> <!--모양-->
            <solid android:color="#e6e6e6"><!--모양-->

            </solid>
            <corners android:radius="10dp"><!--코너 라운드처리-->

            </corners>
            <stroke android:width="2dp"

                android:color="#d9ddde">  <!--테두리 설정-->


            </stroke>
        </shape>
    </item>
</selector>