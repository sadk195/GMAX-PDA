    <RelativeLayout
        android:id="@+id/layout_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_arrival_registration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="@string/M31_btn_title"
                    android:textSize="@dimen/menu_btn_size"
                    app:shapeAppearance="@style/ShapeAppearance.App.SmallComponent"
                    app:elevation="@dimen/el_5dp" />

                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:id="@+id/btn_arrival_query"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="@string/M32_btn_title"
                    android:textSize="@dimen/menu_btn_size"
                    app:shapeAppearance="@style/ShapeAppearance.App.SmallComponent"
                    app:strokeWidth="@dimen/btn_stroke"
                    app:elevation="@dimen/el_0dp" />

            </LinearLayout>

