<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="40">

        <!-- 품번 -->
        <TextView
            android:id="@+id/item_cd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:text="ItemCd"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold" />

        <!-- 품목명 -->
        <TextView
            android:id="@+id/item_nm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:text="ItemNm"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold" />

        <!-- 잔량(출하요청량) -->
        <TextView
            android:id="@+id/REQ_QTY2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="REQ_QTY2"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold" />

        <!-- 출고량(출고량) -->
        <TextView
            android:id="@+id/DN_GI_QTY"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="DN_GI_QTY"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold" />

        <!-- 양품수량 -->
        <TextView
            android:id="@+id/good_on_hand_qty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="GoodOnHandQty"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold" />

        <!-- 적치장 -->
        <TextView
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Location"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold" />

        <!-- 적치장수량 -->
        <TextView
            android:id="@+id/location_qty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="LocationQty"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="16">

        <!-- 납품처코드 -->
        <TextView
            android:id="@+id/ship_to_party"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center|left"
            android:text="ShipToParty"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!-- 수불유형 -->
        <TextView
            android:id="@+id/mov_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="MovType"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!-- 수주오더타입 -->
        <TextView
            android:id="@+id/so_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="SoType"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!-- 공장코드 -->
        <TextView
            android:id="@+id/plant_cd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="PlantCd"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="20">

        <!--  -->
        <TextView
            android:id="@+id/start_dt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center|left"
            android:text="StartDt"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!--  -->
        <TextView
            android:id="@+id/end_dt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="EndDt"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!-- 수불번호 -->
        <TextView
            android:id="@+id/dn_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="DnNo"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!-- 출하요청번호 -->
        <TextView
            android:id="@+id/dn_req_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="DnReqNo"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold" />

        <!-- 창고명 -->
        <TextView
            android:id="@+id/sl_nm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="SlNm"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

