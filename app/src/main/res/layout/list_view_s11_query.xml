<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="20">

        <!-- 출하요청일 -->
        <TextView
            android:id="@+id/insrt_dt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.25"
            android:gravity="left|center"
            android:text="insrt_dt"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:textStyle="bold" />

        <!-- 고객사 -->
        <TextView
            android:id="@+id/bp_nm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.75"
            android:gravity="left|center"
            android:text="bp_nm"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:textStyle="bold" />

        <!-- 출고예정일 -->
        <TextView
            android:id="@+id/promise_dt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.25"
            android:gravity="right|center"
            android:text="promise_dt"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:layout_marginLeft="3dp"
            android:textStyle="bold" />

        <!-- 품목건수 -->
        <TextView
            android:id="@+id/item_cnt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="right|center"
            android:paddingLeft="10dp"
            android:text="item_cnt"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:layout_marginLeft="3dp"
            android:textStyle="bold" />

        <!-- 출하요청번호 -->
        <TextView
            android:id="@+id/dn_req_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="right|center"
            android:text="dn_req_no"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"

            android:textStyle="bold" />


    </LinearLayout>



</LinearLayout>

