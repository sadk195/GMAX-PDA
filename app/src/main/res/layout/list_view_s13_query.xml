<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="20">

        <!-- 출하번호 -->
        <TextView
            android:id="@+id/dn_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.25"
            android:gravity="left|center"
            android:text="dn_no"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:textStyle="bold" />

        <!-- 납품처명 -->
        <TextView
            android:id="@+id/bp_nm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.25"
            android:gravity="left|center"
            android:text="bp_nm"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:layout_marginLeft="3dp"
            android:textStyle="bold" />

        <!-- 출고예정일 -->
        <TextView
            android:id="@+id/promise_dt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="right|center"
            android:text="promise_dt"
            android:textColor="@color/colorHeadTitle"
            android:layout_marginLeft="3dp"
            android:textSize="15dp"
            android:textStyle="bold" />

        <!-- 영업그룹명 -->
        <TextView
            android:id="@+id/sales_grp_nm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.75"
            android:gravity="right|center"
            android:paddingLeft="10dp"
            android:text="sales_grp_nm"
            android:textColor="@color/colorHeadTitle"
            android:layout_marginLeft="3dp"
            android:textSize="15dp"
            android:textStyle="bold" />

        <!-- 운송방법 -->
        <TextView
            android:id="@+id/trans_meth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="right|center"
            android:text="trans_meth"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:layout_marginLeft="3dp"
            android:textStyle="bold" />

