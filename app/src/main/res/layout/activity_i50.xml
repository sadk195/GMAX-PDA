    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                style="?attr/materialButtonOutlinedStyle"
                android:id="@+id/btn_inventory_disposal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/I51_btn_title"
                android:textSize="@dimen/menu_btn_size"
                app:shapeAppearance="@style/ShapeAppearance.App.SmallComponent"
                app:strokeWidth="@dimen/btn_stroke"
                app:elevation="@dimen/el_0dp" />

            <com.google.android.material.button.MaterialButton
                style="?attr/materialButtonOutlinedStyle"
                android:id="@+id/btn_inventory_disposal_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="@string/I52_btn_title"
                android:textSize="@dimen/menu_btn_size"
                app:shapeAppearance="@style/ShapeAppearance.App.SmallComponent"
                app:strokeWidth="@dimen/btn_stroke"
                app:elevation="@dimen/el_0dp" />

        </LinearLayout>

