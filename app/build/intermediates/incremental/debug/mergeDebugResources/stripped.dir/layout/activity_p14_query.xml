<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    >
    <!-- 타이틀-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:weightSum="10"
        android:background="@drawable/bg_box"
        android:id="@+id/header_title"
        >

        <TextView
            android:id="@+id/view_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@color/colorHeadTitle"
            android:gravity="center"
            android:text="공정 정보입력"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>


    <!-- 보여주기 -->
    <!-- 스캔 -->

    <LinearLayout
        android:id="@+id/app_save90"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/app_view8"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10"/>


    <TextView
        android:id="@+id/txt_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_view2"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="※VISS 바코드 및 RFID 태그를스캔 하세요."
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="15dp" />


    <LinearLayout
        android:id="@+id/app_view2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/header_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_box"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="3dp"
        android:weightSum="13">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="right|center"
            android:text="제조오더번호"
            android:layout_weight="3"
            android:textColor="@color/colorBodyTitle"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/img_barcode"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:src="@drawable/barcode" />

        <EditText
            android:id="@+id/txt_Scan_lbl_prodt_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="8"
            android:background="@drawable/bg_text_barcode"
            android:hint="바코드 및 RFID 태그 스캔"
            android:lines="1"
            android:singleLine="true"
            android:text=""
            android:textSize="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save_go"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/bg_btn"
        android:gravity="center"
        android:text="실적 등록"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_menu"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:background="@drawable/bg_toggle"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="메뉴"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

</RelativeLayout>

