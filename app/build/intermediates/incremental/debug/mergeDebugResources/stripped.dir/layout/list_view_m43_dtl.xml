<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id ="@+id/ContentView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:weightSum="20">

        <!--  수량 -->
        <CheckBox
            android:id="@+id/chk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:focusable="false"
            />

        <!-- 품명 -->
        <TextView
            android:id="@+id/code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:text="code"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:textStyle="bold" />
        <!-- ROLL -->
        <TextView
            android:id="@+id/roll_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="roll_no"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:textStyle="bold" />
        <!-- 길이 -->
        <TextView
            android:id="@+id/length"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="code"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:textStyle="bold" />
        <!-- 넓이 -->
        <TextView
            android:id="@+id/width"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="length"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <!-- 납품처코드 -->
        <TextView
            android:id="@+id/ship_to_party"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="ShipToParty"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!-- 수불유형 -->
        <TextView
            android:id="@+id/mov_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="MovType"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!-- 수주오더타입 -->
        <TextView
            android:id="@+id/so_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="SoType"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!-- 공장코드 -->
        <TextView
            android:id="@+id/plant_cd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="PlantCd"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!-- 창고코드 -->
        <TextView
            android:id="@+id/sl_cd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="SlCd"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!-- 운송방법 -->
        <TextView
            android:id="@+id/trans_meth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="TransMeth"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <!--  -->
        <TextView
            android:id="@+id/start_dt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="StartDt"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!--  -->
        <TextView
            android:id="@+id/end_dt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="EndDt"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!-- 수불번호 -->
        <TextView
            android:id="@+id/dn_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="DnNo"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>

