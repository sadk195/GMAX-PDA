<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="20">

        <!-- 품번 -->
        <TextView
            android:id="@+id/item_cd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="left|center"
            android:text="item_cd"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:textStyle="bold" />

        <!-- 품명 -->
        <TextView
            android:id="@+id/item_nm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5"
            android:gravity="left|center"
            android:text="item_nm"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:layout_marginLeft="3dp"
            android:textStyle="bold" />

        <!-- 규격 -->
        <TextView
            android:id="@+id/spec"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="left|center"
            android:text="spec"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:layout_marginLeft="3dp"
            android:textStyle="bold" />

        <!-- 거래명세서 -->
        <TextView
            android:id="@+id/dn_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="left|center"
            android:text="dn_no"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:layout_marginLeft="3dp"
            android:textStyle="bold" />

        <!-- 순번 -->
        <TextView
            android:id="@+id/seq_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="left|center"
            android:text="seq_no"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:layout_marginLeft="3dp"
            android:textStyle="bold" />

        <!-- 입하번호 -->
        <TextView
            android:id="@+id/po_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="left|center"
            android:text="po_no"
            android:textColor="@color/colorHeadTitle"
            android:textSize="15dp"
            android:layout_marginLeft="3dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <!-- 납품처코드 -->
        <TextView
            android:id="@+id/ship_to_paty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="ShipToParty"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!-- 수불유형 -->
        <TextView
            android:id="@+id/mov_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="MovType"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!-- 수주오더타입 -->
        <TextView
            android:id="@+id/so_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="SoType"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <!-- 공장코드 -->
        <TextView
            android:id="@+id/plant_cd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="PlantCd"
            android:textColor="@color/colorHeadTitle"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>

